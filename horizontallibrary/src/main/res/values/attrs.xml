<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalCalendarView">
        <attr name="numOfPages" format="integer"/>
        <attr name="nbOfMonths" format="integer"/>
        <attr name="daysTextSize" format="dimension"/>
        <attr name="daysTextColor" format="color"/>
        <attr name="calendarBgColor" format="color"/>
        <attr name="daysBackgroundColor" format="color"/>
        <attr name="weekTextSize" format="dimension"/>
        <attr name="weekTextColor" format="color"/>
        <attr name="weekBackgroundColor" format="color"/>
        <attr name="selectedBgColor" format="color"/>
        <attr name="todaysDateBgColor" format="color"/>
        <attr name="weekTypeFace" format="string"/>
        <attr name="headerTypeFace" format="string"/>
        <attr name="headerForwardIcon" format="reference"/>
        <attr name="weekForwardIcon" format="reference"/>
        <attr name="headerPreviousIcon" format="reference"/>
        <attr name="weekPreviousIcon" format="reference"/>
        <attr name="hoursTypeFace" format="string"/>
        <attr name="dayNameLength">
            <enum name="singleLetter" value="0"/>
            <enum name="TwoLetters" value="1"/>
            <enum name="threeLetters" value="2"/>
        </attr>
        <attr name="hideNames"  format="boolean"/>

        <!-- danigarciaalva -->
        <attr name="todaysDateTextColor" format="color"/>
    </declare-styleable>
</resources>